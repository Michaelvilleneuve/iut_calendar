$('#count').html('<%= @event.home_works.count %>');
<% if @home_work.errors.messages.any? %>
	alert('Le travail proposé n\'est pas valide. Vérifiez les champs.');
<% else %>
	setTimeout(function() {
		$('.new_hw').addClass('hidden');
	}, 200);
	setTimeout(function() {
		window.location.href = window.location.href.split('#')[0] + "#<%= @event.id %>";
		location.reload();
	}, 600);
<% end %>